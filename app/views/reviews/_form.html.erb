<% if @review.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@review.errors.count, "error") %>
      prohibited this review from being saved:
    </h2>
 
    <ul>
    <% @review.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for [:board_game, @review] do |f| %>
  <div class='rating field'>
    <%= f.label :rating, "Rating: " %>
    <%= f.number_field :rating %>/10
  </div>
  <div class="review-text field">
    <%= f.label :review_text, 'Review Comments: ' %>
    <%= f.text_area :review_text %>
  </div>
  <div class="submit button">
    <%= f.submit %>
  </div>
<% end %>
