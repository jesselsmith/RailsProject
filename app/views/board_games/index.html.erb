<h1>
  <% if @nested_resource %>
    <% display_name = @nested_resource.name %>
    <% display_name += "'s" if @nested_resource.is_a? BoardGameMaker %>
    <%= display_name %>
  <% end%>
  Board Games
</h1>
<% if !@nested_resource %>
  <div class="bg new-button">
    <%= button_to 'Add New Board Game', new_board_game_path, method: :get %>
  </div>
<% end%>
<table>
  <% @board_games.each do |bg| %>
    <tr><td>
      <div class="bg-title">
        <h3><%= link_to bg.title, bg %></h3>
      </div>
    </td></tr>
    <%= @board_game = bg; render 'display_board_game', board_game: @board_game %>
  <% end %>
</table>